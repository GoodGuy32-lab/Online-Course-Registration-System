<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" 
         xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    
    <display-name>Sistem Pendaftaran Kursus Online</display-name>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!-- Peserta Servlet -->
    <servlet>
        <servlet-name>PesertaServlet</servlet-name>
        <servlet-class>controller.PesertaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PesertaServlet</servlet-name>
        <url-pattern>/peserta</url-pattern>
    </servlet-mapping>
    
    <!-- Kursus Servlet -->
    <servlet>
        <servlet-name>KursusServlet</servlet-name>
        <servlet-class>controller.KursusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>KursusServlet</servlet-name>
        <url-pattern>/kursus</url-pattern>
    </servlet-mapping>
    
    <!-- Pendaftaran Servlet -->
    <servlet>
        <servlet-name>PendaftaranServlet</servlet-name>
        <servlet-class>controller.PendaftaranServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PendaftaranServlet</servlet-name>
        <url-pattern>/pendaftaran</url-pattern>
    </servlet-mapping>
    
    <!-- Register Servlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>